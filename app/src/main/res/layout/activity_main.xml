<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.doricovix.utif.kotlinfeed.MainActivity">


<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add New Desc"
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    tools:layout_editor_absoluteX="112dp"
    tools:layout_editor_absoluteY="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent" />

<EditText
    android:id="@+id/editTextDescName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:hint="Enter Desc name"
    android:inputType="textPersonName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="53dp" />

<Spinner
    android:id="@+id/spinnerImage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:entries="@array/image"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="107dp"
    android:layout_marginTop="11dp"
    app:layout_constraintTop_toBottomOf="@+id/editTextDescName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" />

<Button
    android:id="@+id/buttonAddDesc"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="14dp"
    android:text="Add Desc"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/spinnerImage"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="145dp" />

<Button
    android:id="@+id/buttonViewDesc"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="12dp"
    android:text="View Descs"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonAddDesc"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="205dp" />

</android.support.constraint.ConstraintLayout>

